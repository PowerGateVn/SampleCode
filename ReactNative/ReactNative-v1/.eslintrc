{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-native/all"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "modules": true,
            "jsx": true
        }
    },
    "settings": {
      "import/ignore": [
        "react-native-keychain"
      ],
      "import/resolver": {
        "babel-module": {}
      }
    },
    "rules": {
        "brace-style": [
            2,
            "stroustrup",
            {
                "allowSingleLine": true
            }
        ],
        "curly": [
            2,
            "multi-line"
        ],
        "comma-dangle": [
            2,
            "always-multiline"
        ],
        "eol-last": 0,
        "eqeqeq": [
            2,
            "smart"
        ],
        "no-unused-vars": 1,
        "semi": 2,
        "import/no-unresolved": 0,
        "import/named": 2,
        "import/namespace": 2,
        "import/default": 2,
        "import/export": 2,
        "react/forbid-foreign-prop-types": 2,
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/react-in-jsx-scope": 2,
        "react-native/no-inline-styles": 0,
        "react-native/no-unused-styles": 0
    },
    "plugins": [
        "import",
        "react",
        "react-native"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest": true
    },
    "globals": {
        "__DEV__": false
    }
}
