{
  "name": "beam-api",
  "version": "1.0.0",
  "description": "Beam API",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "pm2-runtime start ecosystem.config.js --only api-server --env production",
    "start:dev": "concurrently \"tsc -p tsconfig.dev.json -w\" \"nodemon dist/index.js\"",
    "start:debug": "concurrently \"tsc -p tsconfig.dev.json -w\" \"nodemon --inspect dist/index.js\"",
    "start:eb": "yarn clean && yarn install && yarn build && yarn start",
    "start-worker": "pm2-runtime start ecosystem.config.js --only api-worker --env production",
    "start-worker:dev": "nodemon dist/worker/index.js",
    "start-worker:debug": "nodemon --inspect dist/worker/index.js",
    "start-worker:eb": "yarn clean && yarn install && yarn build && yarn start-worker",
    "start:dev:all": "concurrently 'yarn start:dev' 'yarn start-worker:dev'",
    "db:schema": "node --require ./babel-register.js server/schema/schema.ts",
    "db:schema:test": "NODE_ENV=test yarn db:schema",
    "db:seed": "yarn build:migrations:dev && sequelize db:seed:all",
    "db:seed:test": "yarn build:migrations && NODE_ENV=test sequelize db:seed:all",
    "db:migrate": "yarn build:migrations:dev && sequelize db:migrate",
    "db:migrate:test": "yarn build:migrations && NODE_ENV=test sequelize db:migrate",
    "db:migrate:production": "yarn build:migrations && NODE_ENV=production sequelize db:migrate",
    "db:migration:generate": "yarn sequelize migration:generate --migrations-path server  --name",
    "clean": "rm -rf dist",
    "build": "tsc",
    "build:migrations": "tsc -p tsconfig.migrations.json",
    "build:migrations:dev": "tsc -p tsconfig.migrations.dev.json",
    "lint": "eslint server/**/*.ts",
    "mocha": "NODE_PATH=app NODE_ENV=test mocha --require ./babel-register.js --exit --timeout 10000",
    "test": "yarn test:unit && yarn test:integration && yarn test:e2e",
    "test:unit": "yarn mocha --recursive server/tests/unit/**/*.ts",
    "test:integration": "yarn mocha --timeout 8000 --recursive server/tests/integration/**/*.ts",
    "test:e2e": "PORT=4000 yarn mocha --timeout 8000 --recursive server/tests/e2e/**/*.ts",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prettier": "prettier --write '**/*.ts'"
  },
  "dependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.0.0",
    "@sentry/node": "^4.6.3",
    "@types/sequelize": "^4.27.44",
    "aws-xray-sdk": "^2.1.0",
    "bcrypt": "3.0.2",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "crc": "^3.8.0",
    "cron": "^1.6.0",
    "csv-parse": "^4.4.0",
    "debug": "^3.1.0",
    "deferred": "^0.7.8",
    "dotenv": "^8.0.0",
    "express": "4.16.2",
    "express-graphql": "^0.7.1",
    "express-validation": "1.0.2",
    "express-winston": "^3.1.0",
    "graphql": "^14.0.2",
    "helmet": "3.9.0",
    "http": "0.0.0",
    "http-status": "^1.0.1",
    "joi": "13.0.2",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.4",
    "lynx": "^0.2.0",
    "micromustache": "^5.4.0",
    "moment": "^2.22.2",
    "newrelic": "^4.9.0",
    "node-zendesk": "^1.3.0",
    "passport": "^0.3.2",
    "passport-jwt": "^4.0.0",
    "pg": "^6.1.0",
    "pg-hstore": "^2.3.2",
    "pm2": "^3.2.3",
    "redis": "^2.8.0",
    "request": "^2.83.0",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.4.0",
    "twilio": "^3.29.1",
    "typescript": "^3.2.2",
    "uuid": "^3.3.2",
    "winston": "^3.2.1",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/runtime": "^7.4.4",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-subset": "^1.3.2",
    "@types/dotenv": "^6.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.2",
    "@types/sinon": "^7.0.11",
    "@types/sinon-chai": "^3.2.2",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "adyen-encrypt": "^0.2.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "concurrently": "^4.1.0",
    "coveralls": "^3.0.0",
    "danger": "^7.1.3",
    "danger-plugin-yarn": "^1.3.2",
    "del": "^3.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-no-only-tests": "^2.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "faker": "^4.1.0",
    "husky": "^1.2.1",
    "jsdomify": "^3.1.1",
    "lint-staged": "^7.3.0",
    "mocha": "4.0.1",
    "nock": "^10.0.6",
    "nodemon": "^1.18.8",
    "nyc": "^13.1.0",
    "prettier": "1.15.3",
    "sinon": "^7.1.1",
    "sinon-chai": "^3.3.0",
    "supertest": "^3.0.0",
    "supertest-as-promised": "^4.0.2",
    "ts-node": "^8.1.0"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/proposal-class-properties",
      "@babel/proposal-object-rest-spread"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "statements": 42,
    "branches": 27,
    "lines": 38,
    "functions": 42,
    "exclude": [
      "server/tests/**"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --list-different",
      "eslint",
      "git add"
    ]
  }
}