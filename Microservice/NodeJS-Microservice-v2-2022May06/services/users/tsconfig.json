{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "dom", "es2017", "es6", "es5"],
    "esModuleInterop": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "removeComments": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts", "src/**/*.xml", "src/**/*.html"],
  "exclude": ["node_modules", "dist"]
}
